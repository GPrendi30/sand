<section id="friendlist">

    <!-- Change #page's class between sent_requests/friends/requests/search to 
        change color and content -->

    <section class="friends" id="page">

        <!-- Show searchbar when on the search page -->

        <div id="searchbar" style="display: show;">
            <form action="">
                <input type="text" placeholder="Search for users..." name="search">
                <button type="submit">&#x1F50D;</button>
              </form>
        </div>

        <div class="list">
          <ul>
              
                <!-- To add to friendlist, insert element with this structure: 
                
                <li class="friend">
                    <section class="shadow" id="info">
                        <img id="avatar" src="images/user1.png" alt="<%= /* friend.name */ %>">
                        <h1 id="name"><%= /* friend.name */ %></h1>
                    </section>
                    <div id="buttons">
                        <button class="button" id="profile">See Profile</button>
                        <button class="button" id="message">Message</button>
                        <button class="button" id="unfriend">Unfriend</button>
                    </div>
                </li>
                
                -->
            <% friends.forEach( friend => { %>
                <li class="friend" data-sid="<%= friend._id %>">
                    <section class="shadow" id="info">
                        <img id="avatar" src="images/user1.png" alt="<%= friend.name %>">
                        <h1 id="name"><%= friend.name %></h1>
                        <h1 id="friend_bio"><%= friend.bio %> </h1>
                    </section>
                    <div id="buttons">
                        <button class="button" id="profile" data-sid="<%= friend._id %>" >See Profile</button>
                        <button class="button" id="message" data-sid="<%= friend._id %>" >Message</button>
                        <button class="button" id="friend_button" data-sid="<%= friend._id %>" >Add Friend</button>
                    </div>
                </li>

            <% }); %>
          </ul>
        </div>
        
    </section>

    <section id="bookmarks">
        <% for(let i=0; i < 9; i++) { %>
            <% let style = 'grid-area: ' + (1 + 2*i) + ' / 1 / ' + (4 + 2*i) + ' / 2' %>
            <div style="<%= style %>" id="bm<%=i%>" class="bookmark"></div>
        <% }; %>
    </section>

</section>