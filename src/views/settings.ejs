<html>
    <body>

        <form method="POST" action="/user/settings/<%= result._id %>?req=password&_method=PUT" enctype="multipart/form-data">

            <label for="old_password">Old password:</label>
            <input type="text" name="old_password" required>

            <label for="new_password">New password:</label>
            <input type="password" name="new_password" required>

            <label for="confirm_new_password">Confirm new password:</label>
            <input type="password" name="confirm_new_password" required>
            
            <input type="submit" value="Change password">
        </form>

        <form method="POST" action="/user/settings/<%= result._id %>?req=email&_method=PUT" enctype="multipart/form-data">
            <label for="email">Change email:</label>
            <input type="email" name="email" required value=<%= result.email %>>

            <input type="submit" value="Change email">
        </form>

        <form method="POST" action="/user/settings/<%= result._id %>?req=bio&_method=PUT" enctype="multipart/form-data">
            <label for="bio">Change bio:</label>
            <input type="text" name="bio" value=<%= result.bio %>>

            <input type="submit" value="Change bio">
        </form>

        <form method="POST" action="/user/settings/<%= result._id %>?req=ppic&_method=PUT" enctype="multipart/form-data">
            <label for="upload">Choose an image to upload:</label>
            <input type="file" id="file" name="profile_picture" accept="image/*">
            <button type = "button" id="regenerate_image" name="regenerate_image"> Regenerate Image </button>
            <input type="submit" value="Change profile picture">
        </form>
    
    </body>
</html>