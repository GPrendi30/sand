{
    "env": {
        "browser": true,
        "commonjs": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": 12
    },
    "rules": {
        "arrow-spacing": "off",
        "no-multi-spaces": "off",
        "no-multiple-empty-lines": "off",
        "semi": "off",
        "indent": ["warn", 4]
    },
    "ignorePatterns": "src/test/*"
}